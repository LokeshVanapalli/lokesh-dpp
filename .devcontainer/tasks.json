{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Backend (Maven)",
      "type": "shell",
      "command": "cd backend && mvn spring-boot:run -Dspring-boot.run.profiles=dev",
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Run Frontend (Angular)",
      "type": "shell",
      "command": "cd frontend && npm run start",
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Docker Compose Up (Postgres)",
      "type": "shell",
      "command": "sudo docker compose -f .devcontainer/docker-compose.yml up -d",
      "isBackground": false,
      "problemMatcher": []
    }
  ]
}
